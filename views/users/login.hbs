        <h1>Login</h1>
        <p>Please Login below</p>
            <form class="form" action="/users/login" method="post">
                <div class="form-group" id="focus">
                    <label>Username</label>
                    <input class="form-control" id="focus" name="username" type="text" autofocus="autofocus" placeholder="Username" minlength="3" maxlength="14" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" name="password" type="password" placeholder="Enter Password" minlength="10" maxlength="35" />
                </div>
                    <input class="btn btn-default" name="submit" type="submit" value="Login" />
            </form>

            {{>footer}}
        </body>
    </html>