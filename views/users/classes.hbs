<!DOCTYPE HTML>
<html>
		{{>header}}
	<body>
		
	<div class="fh5co-loader"></div>
	
	<div id="page">
		{{!-- this is the start of nav bar --}}
		{{>navbar}}
	{{!--  end of nav bar --}}

        <h2>{{user.username}}'s Classes</h2>
        {{#if user.classes}}
			<div class="row">
				{{#each classes}}
					<div class="col-md-3 animate-box">
						<div class="course">
							<a href="#" class="course-img" style="background-image: url(images/project-1.jpg){{newClass.classImg.data}};">
							</a>
							<div class="desc">
								<h3><a href="#">{{title}}</a></h3>
								<p>{{description}}</p>
								<p>Instructor : <a href="/teacher/:{{id_teacher}}">{{teacher}}</a></p>
								<span><a href="/classes/{{_id}}/details" class="btn btn-primary btn-sm btn-course">Take Course</a></span>
							</div>
						</div>
					</div>
				{{/each}}
			</div>
        {{else}}
        	<p>You have not registed for any classes</p>
        {{/if}}

    		{{>footer}}
	</body>
</html>