    <div class="col-md-5 col-md-push-1 col-md-pull-1 animate-box">
        <h1>Login</h1>
        <p>Please Login below</p>
            <form class="form" action="/teachers/login" method="post">
                <div class="form-group" id="focus">
                    <div class="col-md-12 row">
                        <label>Username</label>
                        <input class="form-control" id="focus" name="username" type="text" autofocus placeholder="Username" minlength="3" maxlength="14" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 row">
                        <label>Password</label>
                        <input class="form-control" name="password" type="password" placeholder="Enter Password" minlength="10" maxlength="35" />
                    </div>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" name="submit" type="submit" value="Login" />
                </div>
            </form>
    </div>

